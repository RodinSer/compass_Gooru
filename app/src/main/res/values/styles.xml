<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CompassText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/purple_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue_title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/blue_title</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/blue_title</item>
        <item name="tabMode">scrollable</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">25sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputAuth" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/transparent_white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="EditPassword" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextMinSubtitle" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue_title</item>
    </style>

    <style name="TextMiddleTitle" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyParCourse.Task" parent="CardView">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginVertical">3dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>


    <style name="ParserStatus_tile" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ParserStatus_field" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/purple_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="Parsing.Radio_Button" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_radio_button_parsing</item>

    </style>

</resources>