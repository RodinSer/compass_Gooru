<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   style="@style/MyParCourse.Task">

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_time"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:textColor="@color/black"
        tools:text="8 часов" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_title"
            android:textSize="16sp"
            android:layout_marginHorizontal="5dp"
            android:layout_gravity="center"
            tools:text="Поп-арт механик" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progress_en"
            android:textColor="@color/purple_title"
            android:textSize="10sp" />


        <ProgressBar
            android:id="@+id/progress_barr"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="10"
            android:progressBackgroundTint="@color/bg_progress"
            android:progressTint="@color/purple_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="end"
            android:textColor="@color/purple_title"
            android:textSize="10sp"
            tools:text="20%" />
    </LinearLayout>

</androidx.cardview.widget.CardView>